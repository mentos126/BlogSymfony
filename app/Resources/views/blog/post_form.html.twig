{{ form_start(form) }}
{{ form_rest(form) }}
<textarea id="summernote" name="editordata" class="form-control" rows="3"></textarea>
<br>
<button class="btn btn-primary">{{ button | default('Valider')}}</button>
{{ form_end(form) }}


<script>
    $('#summernote').summernote("code", $('#appbundle_blog_post_content').text());
    $('#appbundle_blog_post_content').hide();
    $('#summernote').on('summernote.change', function(we, contents, $editable) {
        $('#appbundle_blog_post_content').text(contents);
    }); 
</script>